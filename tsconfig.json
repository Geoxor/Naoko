{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "rootDirs": ["./src"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src", "./src/assets/*"]
}
